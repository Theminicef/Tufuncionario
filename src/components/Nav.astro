---
import { Icon } from 'astro-icon/components';
import "../styles/global.css";

const { currentPath } = Astro.props;
---

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<nav class="navbar navbar-expand-lg bg-primary bg-gradient py-2 border border-secondary-subtle rounded">
    <div class="container-fluid">
        <a href="/" class="navbar-brand ms-5" aria-label="Go Home">
            <Icon name="logomark" size={60} />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse px-5" id="navbarNavAltMarkup">
            <div class="navbar-nav mx-auto mb-2 mb-lg-0">
                <a class={`nav-link fw-bold me-2 ${currentPath === '/' ? 'active' : ''}`} aria-current="page" href="/">Inicio</a>
                <a class={`nav-link fw-bold me-2 ${currentPath === '/Oposiciones/' ? 'active' : ''}`} href="/Oposiciones/">Oposiciones</a>
                <a class={`nav-link fw-bold me-2 ${currentPath === '/Blog/' ? 'active' : ''}`} href="/Blog/">Blog</a>
                <a class={`nav-link fw-bold me-2 ${currentPath === '/Libros/' ? 'active' : ''}`} href="/Libros/">Libros</a>
                <a class={`nav-link fw-bold me-2 ${currentPath === '/about/' ? 'active' : ''}`} href="/about/">Sobre nosotros</a>
                <a class={`nav-link fw-bold me-2 ${currentPath === '/Redes/' ? 'active' : ''}`} href="/Redes/">Redes</a>
            </div>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search">
                <button class="btn btn-outline-dark" type="submit">Buscar</button>
            </form>
        </div>
    </div>
</nav>
